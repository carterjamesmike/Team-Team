<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{names}}!</h2>
    {{!-- <h2>Children:{{children.name}}</h2> --}}
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a new request:</h3>

    <form class="form new-request-form">
      <div class="form-group">
        <label for="request-name">Request title:</label>
        <input class="form-input" type="text" id="request-title" name="request-title" />
      </div>
      <div class="form-group">
        <label for="request-date">Date for request:</label>
        <input class="form-input" type="date" id="request-date" name="request-date" />
      </div>
      <div class="form-group">
        <label for="request-comment">Comment:</label>
        <textarea class="form-input" id="request-comment" name="request-comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

    <div class="col-md-6">
    <h3>Add a Child:</h3>

    <form class="form new-child-form">
      <div class="form-group">
        <label for="child-name">Child Name:</label>
        <input class="form-input" type="text" id="child-name" name="child-name" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>
  
